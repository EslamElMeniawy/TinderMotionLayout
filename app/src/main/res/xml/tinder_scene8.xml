<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="270dp"
                android:layout_height="424dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="24dp" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Layout
                android:layout_width="270dp"
                android:layout_height="424dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Transform
                android:scaleX="0.90"
                android:scaleY="0.90" />
        </Constraint>

        <Constraint android:id="@id/detailButton">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@id/cardOne"
                app:layout_constraintEnd_toEndOf="@id/cardOne"
                app:layout_constraintStart_toStartOf="@id/cardOne" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/unlike">
        <Constraint
            android:id="@id/cardOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9" />

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenUnlike"
        app:deriveConstraintsFrom="@id/unlike">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="500dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/like">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.9" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenLike"
        app:deriveConstraintsFrom="@id/like">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/detail">
        <Constraint android:id="@id/cardOne">
            <Layout
                android:layout_width="0dp"
                android:layout_height="560dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <CustomAttribute
                app:attributeName="radius"
                app:customDimension="0dp" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@id/detailButton">
            <Layout
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="@id/cardOne"
                app:layout_constraintEnd_toEndOf="@id/cardOne"
                app:layout_constraintStart_toStartOf="@id/cardOne" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapseCards">
        <Constraint android:id="@id/cardOne">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Transform
                android:rotationX="-35"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:translationY="100dp" />
        </Constraint>

        <Constraint android:id="@id/cardTwo">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Transform
                android:rotationX="-35"
                android:scaleX="0.5"
                android:scaleY="0.5" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/detail"
        app:constraintSetStart="@id/start"
        app:duration="1000">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/detailButton" />
    </Transition>

    <Transition
        android:id="@+id/startToLeft3"
        app:constraintSetEnd="@+id/unlike"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"
                app:percentY="0.1" />
        </KeyFrameSet>
    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenUnlike"
        app:constraintSetStart="@+id/unlike"
        app:duration="150" />

    <Transition
        android:id="@+id/startToRight3"
        app:constraintSetEnd="@+id/like"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/cardOne" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/cardOne"
                app:percentY="-0.1" />
        </KeyFrameSet>
    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/offScreenLike"
        app:constraintSetStart="@+id/like"
        app:duration="150" />

    <Transition
        android:id="@+id/collapseCard"
        app:constraintSetEnd="@+id/collapseCards"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragDown"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/cardOne"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/cardOne" />
    </Transition>
</MotionScene>